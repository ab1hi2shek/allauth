<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <!-- for flash messages -->
    <% unless flash.empty? %>
     <script type="text/javascript">
          <% flash.each do |f| %>
        <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
         toastr['<%= type %>']('<%= f[1] %>');
     <% end %>
     </script>
<% end %>
<!--  -->


  <ul>
  <% if current_user %>
  <li><%= link_to 'Log Out', '/logout' %></li>
  <li><%= image_tag(current_user.avatar, size: '50x50') %>&nbsp;&nbsp;
  <%= current_user.name %></li>
  
  <% else %>
  <li><%= link_to 'FB', '/auth/facebook' %></li>
  <li><%= link_to 'Google+', '/auth/google' %></li>
  
  <% end %>
</ul>
    <%= yield %>
  </body>
</html>
