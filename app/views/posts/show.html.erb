<%= @post.title %><br>


<nav aria-label="...">
  <ul class="pager">
    <li>
    	<%if @prev_post!=nil %>
			<%= link_to  'Previous', @prev_post %><p>
		<% end %>
	</li>
    <li>
    	<%if @next_post!=nil %>
			<%= link_to  'Next', @next_post %></p><br>
		<% end %>

    </li>
  </ul>
</nav>

<p>
  Tags:
  <% @post.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>

<%= @post.content.html_safe %><br>

<br> <br>

<%= link_to "Edit Article", edit_post_path(@post) %>
<%= link_to "Delete Article", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>

<%= link_to "All Articles", posts_path %>

<%= render 'disqus' %>